<Page x:Class="TeR.MENU"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MENU">

    <Page.Background>
        <ImageBrush ImageSource="/bluexl-34013550-1026450798.png"/>
    </Page.Background>

    <Grid Margin="0,0,-238,-158">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="597*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>



        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="820" Margin="13,-32,0,0" Grid.RowSpan="15" Grid.Column="1">
            <Button Click="ExitButton_Click" Margin="20" FontFamily="Impact" Width="115" Height="115" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/9. Close or Multiply.png"/>
                </Button.Background>
            </Button>
            <Button Content="История Обновлений" Click="Page1Button_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Удалённое" Click="Page2Button_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Предметы" Click="ItemsButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Растения" Click="PlantsButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Существа" Click="CreaturesButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Биомы" Click="BiomesButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="События" Click="EventsButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Режимы игры" Click="GameModesButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Механики" Click="MechanicsButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Классы персонажей" Click="CharacterClassesButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
            <Button Content="Достижения" Click="AchievementsButton_Click" Margin="1" Padding="10" FontFamily="Impact" FontSize="20" OpacityMask="#FF333232" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/0000.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <Frame Name="MainFrame" Margin="10,51,179,28" Grid.RowSpan="11"/>
    </Grid>
</Page>
