<Window x:Class="TeR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeR"
        mc:Ignorable="d"
        Title="T" Height="450" Width="800">
    
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/7bcxkdqxdjt31.jpg"/>
        </Grid.Background>
        
        <StackPanel Margin="106,104,106,104">
            <TextBlock Text="Имя пользователя:" Margin="5" Width="262"/>
            <TextBox x:Name="usernameTextBox" Margin="5" Width="262"/>
            <TextBlock Text="Пароль:" Margin="5" Width="262"/>
            <PasswordBox x:Name="passwordBox" Margin="5" Width="262"/>
            <TextBlock x:Name="resultTextBlock" Margin="5" Width="262"/>
            <Button Content="Войти" Click="LoginButton_Click" Height="21" Margin="5" Width="262"/>
        </StackPanel>
        <Frame x:Name="MainFrame" />
    </Grid>
